@model IntranetDev.Models.Hrfile

@{
    ViewData["Title"] = "Delete";
}


<style>
    .current-file-link {
        text-decoration: underline;
    }
</style>
<h1> Delete File</h1>
<h3>Are you sure you want to delete this?</h3>


<div>
    <h4>File Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            File Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>

        <!-- Add a link to download the file -->
        <dt class="col-sm-2">
            View File:
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Download" asp-controller="Hrfiles" asp-route-id="@Model.FileId" class="current-file-link">Download File</a>
        </dd>


        <dt class="col-sm-2">
            File Details:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileDetails)
        </dd>
        <dt class="col-sm-2">
            Upload Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadedDate)
        </dd>
        <dt class="col-sm-2">
            Last Modified:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>
        <dt class="col-sm-2">
            Uploaded By:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UploadedBy)
        </dd>
        <dt class="col-sm-2">
            Modified By:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>
        <dt class="col-sm-2">
            Entity:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity)
        </dd>
        <dt class="col-sm-2">
            Section:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Section)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FileId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FileId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
